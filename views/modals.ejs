<div class="reveal-modal" id="loginModal" data-reveal aria-labelledby="modalTitle" aria-hidden="true">
	<h2 id="modalTitle"> Log In </h2>
	<form action="/login" method="POST">
		<div class="row">
			<div class="large-3 small-3 columns">
		Username
			</div>
			<div class="large-9 small-9 columns">
				<input type="text" id="user" name="user">
			</div>
		</div>
				<div class="row">
			<div class="large-3 small-3 columns" id="passwordPlaceholder">
		Password
			</div>
			<div class="large-9 small-9 columns">
				<input type="password" id="password" name="password">
			</div>
		</div>
		
		<input type="hidden" name="redirectPath" value="" class="redirectPath">
		<button class="right" type="submit">Log In </button>
		
	</form>
	<button class="inline left" id="newUserButton">Create New User</button>

	<a href="#" class="close-reveal-modal" aria-label="Close"> X</a>
</div>


<div class="reveal-modal" id="newUserModal" data-reveal aria-labelledby="moda2lTitle" aria-hidden="true">
	<h2 id="modal2Title">New User</h2>				

	<form  action="/newUser" method="POST">
		<div class="row">
			<div class="large-3 small-3 columns">
		Username
			</div>
			<div class="large-9 small-9 columns">
				<input type="text" id="newUser" name="user" required="true">
			</div>
		</div>
		<div class="row">
			<div class="large-3 small-3 columns">
		E-mail
			</div>
			<div class="large-9 small-9 columns">
				<input type="text" id="newEmail" name="email" pattern="\w+@\w+\.\w{2,3}" required="true">
			</div>
		</div>
				<div class="row">
			<div class="large-3 small-3 columns" id="passwordPlaceholder" required="true">
		Password
			</div>
			<div class="large-9 small-9 columns">
				<input type="password" id="newPassword" name="password" required="true">
			</div>
		</div>
				<div class="row">
			<div class="large-3 small-3 columns">
		Re-enter Password
			</div>
			<div class="large-9 small-9 columns">
				<input type="password" id="newPassword2">
			</div>
		</div>
		<input type="hidden" value="" name="redirectPath" class="redirectPath">
		<button type="submit" id="newUserSubmit">Create New User </button>
	</form>
	<a class="close-reveal-modal" aria-label="Close" id="closeNew"> X</a>
</div>

